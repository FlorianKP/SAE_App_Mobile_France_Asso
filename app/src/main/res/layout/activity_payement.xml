<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@drawable/blue_gradient">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descr_btn_retour"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/retour"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/RÃ¨glement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:text="@string/r_glement"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choisissez_le_mode_de_paiement"
                android:layout_gravity="center"
                android:textSize="25sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/optionsDePayement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:id="@+id/virement_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@id/carte_bancaire_logo"
                    android:contentDescription="@string/image_d_une_banque_correspondant_l_option_de_payement_virement"
                    android:src="@drawable/virement_logo" />

                <TextView
                    android:id="@+id/virement_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/virement_logo"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="45dp"
                    android:layout_toStartOf="@id/carte_bancaire_TextView"
                    android:text="@string/virement"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/carte_bancaire_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/image_d_une_carte_bancaire_correspondant_l_option_de_payement_carte_bancaire"
                    android:src="@drawable/carte_bancaire_image" />

                <TextView
                    android:id="@+id/carte_bancaire_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carte_bancaire_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/carte_bancaire"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/paypal_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/carte_bancaire_logo"
                    android:contentDescription="@string/image_bouton_du_logo_de_paypal_correspondant_l_option_de_payement_paypal"
                    android:src="@drawable/paypal_logo" />

                <TextView
                    android:id="@+id/paypal_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/paypal_logo"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/carte_bancaire_TextView"
                    android:text="@string/paypal"
                    android:textSize="12sp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/zone_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texte_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/information_sur_le_mode_de_paiement_s_lectionn"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_je_donne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/je_donne"
                    android:background="@color/orange"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</LinearLayout>